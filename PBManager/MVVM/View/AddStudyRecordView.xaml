<Window x:Class="PBManager.MVVM.View.AddStudyRecordView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:persian="clr-namespace:Mohsen.PersianDateControls;assembly=Mohsen.PersianDateControls"
        xmlns:local="clr-namespace:PBManager.MVVM.View"
        mc:Ignorable="d"
        Title="سامانه مدیریت آموزش | ثبت اطلاعات مطالعه"
        Height="520" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    <Border Background="#272537" CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid x:Name="TitleBar"
                  Grid.Row="0"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                  Background="Transparent">
                <TextBlock VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="White"
                           FontSize="20">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="ثبت اطلاعات مطالعه"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                    <Setter Property="Text" Value="ویرایش اطلاعات مطالعه"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,5,5,0">
                    <Button x:Name="MinimizeButton" 
                            Click="MinimizeButton_Click" 
                            Content="—" 
                            Style="{StaticResource WindowButtonStyle}"/>
                    <Button x:Name="CloseButton" 
                            Click="CloseButton_Click" 
                            Content="✕" 
                            Style="{StaticResource WindowButtonStyle}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0">
                    <Button x:Name="InfoButton" Content="ℹ"
                            Width="25" Height="25"
                            FontWeight="Bold"
                            Background="#353340"
                            Foreground="White"
                            BorderBrush="#272537"
                            Click="InfoButton_Click"/>
                    <Popup x:Name="InfoPopup" AllowsTransparency="True"
                           PlacementTarget="{Binding ElementName=InfoButton}"
                           Placement="Bottom"
                           StaysOpen="False">
                        <Border Background="#353340" 
                                Padding="10" 
                                CornerRadius="10"
                                BorderBrush="#272537"
                                BorderThickness="1">
                            <TextBlock FlowDirection="RightToLeft" 
                                       Foreground="White"
                                       FontSize="12"
                                       TextWrapping="Wrap"
                                       Width="200">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="ورودی به دقیقه وارد شود، برای رفتن به درس بعدی از دکمه Tab استفاده کنید."/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                                <Setter Property="Text" Value="در حال ویرایش اطلاعات موجود. تغییرات اعمال شده جایگزین داده‌های قبلی خواهد شد."/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>
                    </Popup>
                </StackPanel>
            </Grid>

            <Border Grid.Row="1" Background="#353340" CornerRadius="8" Margin="10,5,10,5" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="انتخاب هفته:" 
                               Foreground="White" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>

                    <persian:PersianDatePicker
                            x:Name="WeekStartDatePicker"
                            Grid.Column="1"
                            SelectedDateChanged="WeekStartDatePicker_SelectedDateChanged"
                            SelectedDate="{Binding SelectedWeekStart, Mode=TwoWay}"
                            Background="#2a2836"
                            BorderBrush="#444"
                            Height="35"
                            FontSize="14"
                            HorizontalAlignment="Left"
                            Width="150"/>

                    <TextBlock x:Name="WeekRangeDisplay"
                               Grid.Column="2"
                               Text="{Binding WeekRangeText}"
                               Foreground="#B0B0B0"
                               FontSize="12"
                               VerticalAlignment="Center"
                               Margin="15,0,15,0"/>

                    <Button x:Name="LoadWeekButton"
                            Grid.Column="3"
                            Content="بارگذاری هفته"
                            Command="{Binding LoadWeekCommand}"
                            Style="{StaticResource ModernButtonStyle}"
                            Padding="12,6"
                            Height="35"/>

                </Grid>
            </Border>

            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#353340" CornerRadius="8,8,0,0" Padding="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="درس" Grid.Column="0" Foreground="White" FontWeight="Bold" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="شنبه" Grid.Column="1" Foreground="White" FontWeight="Bold"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="یکشنبه" Grid.Column="2" Foreground="White" FontWeight="Bold"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="دوشنبه" Grid.Column="3" Foreground="White" FontWeight="Bold"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="سه‌شنبه" Grid.Column="4" Foreground="White" FontWeight="Bold"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="چهارشنبه" Grid.Column="5" Foreground="White" FontWeight="Bold"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="پنج‌شنبه" Grid.Column="6" Foreground="White" FontWeight="Bold"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="جمعه" Grid.Column="7" Foreground="White" FontWeight="Bold"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <Border Grid.Row="1" Background="#2a2836" CornerRadius="0,0,8,8" Padding="5">
                        <ItemsControl ItemsSource="{Binding WeeklySubjectEntries}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,2" Padding="5" Background="#323040" CornerRadius="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding Subject.Name}" 
                                                       Foreground="White" 
                                                       VerticalAlignment="Center" 
                                                       HorizontalAlignment="Center"
                                                       FontWeight="Medium"/>

                                            <!-- Saturday -->
                                            <Border Grid.Column="1" CornerRadius="5" Background="#353340" Width="60" Height="30" BorderThickness="1">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding (Validation.HasError), ElementName=SatTextBox}" Value="True">
                                                                <Setter Property="BorderBrush" Value="Red"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding (Validation.HasError), ElementName=SatTextBox}" Value="False">
                                                                <Setter Property="BorderBrush" Value="Green"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Text.Length, ElementName=SatTextBox}" Value="0">
                                                                <Setter Property="BorderBrush" Value="#444"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBox x:Name="SatTextBox" Text="{Binding MinutesSat, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                                         Style="{StaticResource StudyInputTextBox}" BorderThickness="0" Validation.ErrorTemplate="{x:Null}"
                                                         BorderBrush="Transparent" Background="Transparent" HorizontalContentAlignment="Center"
                                                         Width="50"/>
                                            </Border>

                                            <!-- Sunday -->
                                            <Border Grid.Column="2" CornerRadius="5" Background="#353340" Width="60" Height="30" BorderThickness="1">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding (Validation.HasError), ElementName=SunTextBox}" Value="True">
                                                                <Setter Property="BorderBrush" Value="Red"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding (Validation.HasError), ElementName=SunTextBox}" Value="False">
                                                                <Setter Property="BorderBrush" Value="Green"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Text.Length, ElementName=SunTextBox}" Value="0">
                                                                <Setter Property="BorderBrush" Value="#444"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBox x:Name="SunTextBox" Text="{Binding MinutesSun, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                                         Style="{StaticResource StudyInputTextBox}" BorderThickness="0" Validation.ErrorTemplate="{x:Null}"
                                                         BorderBrush="Transparent" Background="Transparent" HorizontalContentAlignment="Center"/>
                                            </Border>

                                            <!-- Monday -->
                                            <Border Grid.Column="3" CornerRadius="5" Background="#353340" Width="60" Height="30" BorderThickness="1">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding (Validation.HasError), ElementName=MonTextBox}" Value="True">
                                                                <Setter Property="BorderBrush" Value="Red"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding (Validation.HasError), ElementName=MonTextBox}" Value="False">
                                                                <Setter Property="BorderBrush" Value="Green"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Text.Length, ElementName=MonTextBox}" Value="0">
                                                                <Setter Property="BorderBrush" Value="#444"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBox x:Name="MonTextBox" Text="{Binding MinutesMon, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                                         Style="{StaticResource StudyInputTextBox}" BorderThickness="0" Validation.ErrorTemplate="{x:Null}"
                                                         BorderBrush="Transparent" Background="Transparent" HorizontalContentAlignment="Center"/>
                                            </Border>

                                            <!-- Tuesday -->
                                            <Border Grid.Column="4" CornerRadius="5" Background="#353340" Width="60" Height="30" BorderThickness="1">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding (Validation.HasError), ElementName=TueTextBox}" Value="True">
                                                                <Setter Property="BorderBrush" Value="Red"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding (Validation.HasError), ElementName=TueTextBox}" Value="False">
                                                                <Setter Property="BorderBrush" Value="Green"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Text.Length, ElementName=TueTextBox}" Value="0">
                                                                <Setter Property="BorderBrush" Value="#444"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBox x:Name="TueTextBox" Text="{Binding MinutesTue, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                                         Style="{StaticResource StudyInputTextBox}" BorderThickness="0" Validation.ErrorTemplate="{x:Null}"
                                                         BorderBrush="Transparent" Background="Transparent" HorizontalContentAlignment="Center"/>
                                            </Border>

                                            <!-- Wednesday -->
                                            <Border Grid.Column="5" CornerRadius="5" Background="#353340" Width="60" Height="30" BorderThickness="1">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding (Validation.HasError), ElementName=WedTextBox}" Value="True">
                                                                <Setter Property="BorderBrush" Value="Red"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding (Validation.HasError), ElementName=WedTextBox}" Value="False">
                                                                <Setter Property="BorderBrush" Value="Green"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Text.Length, ElementName=WedTextBox}" Value="0">
                                                                <Setter Property="BorderBrush" Value="#444"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBox x:Name="WedTextBox" Text="{Binding MinutesWed, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                                         Style="{StaticResource StudyInputTextBox}" BorderThickness="0" Validation.ErrorTemplate="{x:Null}"
                                                         BorderBrush="Transparent" Background="Transparent" HorizontalContentAlignment="Center"/>
                                            </Border>

                                            <!-- Thursday -->
                                            <Border Grid.Column="6" CornerRadius="5" Background="#353340" Width="60" Height="30" BorderThickness="1">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding (Validation.HasError), ElementName=ThuTextBox}" Value="True">
                                                                <Setter Property="BorderBrush" Value="Red"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding (Validation.HasError), ElementName=ThuTextBox}" Value="False">
                                                                <Setter Property="BorderBrush" Value="Green"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Text.Length, ElementName=ThuTextBox}" Value="0">
                                                                <Setter Property="BorderBrush" Value="#444"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBox x:Name="ThuTextBox" Text="{Binding MinutesThu, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                                         Style="{StaticResource StudyInputTextBox}" BorderThickness="0" Validation.ErrorTemplate="{x:Null}"
                                                         BorderBrush="Transparent" Background="Transparent" HorizontalContentAlignment="Center"/>
                                            </Border>

                                            <!-- Friday -->
                                            <Border Grid.Column="7" CornerRadius="5" Background="#353340" Width="60" Height="30" BorderThickness="1">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding (Validation.HasError), ElementName=FriTextBox}" Value="True">
                                                                <Setter Property="BorderBrush" Value="Red"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding (Validation.HasError), ElementName=FriTextBox}" Value="False">
                                                                <Setter Property="BorderBrush" Value="Green"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Text.Length, ElementName=FriTextBox}" Value="0">
                                                                <Setter Property="BorderBrush" Value="#444"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBox x:Name="FriTextBox" Text="{Binding MinutesFri, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                                         Style="{StaticResource StudyInputTextBox}" BorderThickness="0" Validation.ErrorTemplate="{x:Null}"
                                                         BorderBrush="Transparent" Background="Transparent" HorizontalContentAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </Grid>
            </ScrollViewer>

            <Button x:Name="submitBtn"
                    Grid.Row="3"
                    Margin="10"
                    Height="35"
                    Width="120"
                    HorizontalAlignment="Center"
                    Command="{Binding SubmitCommand}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                        <Setter Property="Content" Value="ثبت"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                <Setter Property="Content" Value="بروزرسانی"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>