<UserControl x:Class="PBManager.UI.MVVM.View.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PBManager.UI.MVVM.View"
             mc:Ignorable="d" 
             xmlns:converter="clr-namespace:PBManager.Converters"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converter:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converter:DateConverter x:Key="DateConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5"
                    HorizontalAlignment="Right">
            <ComboBox ItemsSource="{Binding AvailableEntityTypes}" 
              SelectedItem="{Binding EntityTypeFilter}" 
              Width="150" Margin="5"
                      Style="{StaticResource ModernComboBox}"/>

            <ComboBox ItemsSource="{Binding AvailableUsers}" 
              DisplayMemberPath="Username"
              SelectedValuePath="Id"
              SelectedValue="{Binding UserFilter}"
              Width="150" Margin="5"
                      Style="{StaticResource ModernComboBox}"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DataGrid ItemsSource="{Binding Logs}"
          Style="{StaticResource ModernDataGrid}"
          CellStyle="{StaticResource ModernDataGridCell}"
          ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeader}"
          RowStyle="{StaticResource ModernDataGridRow}"
          IsReadOnly="True" 
          AutoGenerateColumns="False"
          FlowDirection="RightToLeft">
                <DataGrid.Columns>

                    <DataGridTextColumn Header="زمان" 
                            Binding="{Binding Timestamp, Converter={StaticResource DateConverter}}" 
                            Width="*"/>

                    <DataGridTextColumn Header="کاربر" 
                            Binding="{Binding Username}" 
                            Width="*"/>

                    <DataGridTextColumn Header="عملیات" 
                            Binding="{Binding ActionType}" 
                            Width="*"/>

                    <DataGridTextColumn Header="توضیحات" 
                            Binding="{Binding Description}" 
                            Width="2*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextWrapping" Value="Wrap"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                </DataGrid.Columns>
            </DataGrid>

            <ProgressBar Grid.Row="0" IsIndeterminate="True" Height="4" VerticalAlignment="Top"
                 Visibility="{Binding LoadHistoryCommand.IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <Button Grid.Row="1" Content="لود بیشتر..." Margin="5" 
                        Padding="10,5"
                        Width="80" Height="30"
                        HorizontalAlignment="Center"
                        FlowDirection="RightToLeft"
                        Command="{Binding LoadMoreLogsCommand}"
                        IsEnabled="{Binding CanLoadMore}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CanLoadMore}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding LoadMoreLogsCommand.IsRunning}" Value="True">
                                <Setter Property="Content" Value="Loading..."/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</UserControl>
