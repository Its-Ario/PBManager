<Window x:Class="PBManager.UI.MVVM.View.ManagementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">
    <Border Background="#272537" CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid x:Name="TitleBar"
                  Grid.Row="0"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                  Background="Transparent">
                <TextBlock Text="{Binding WindowTitle}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="White"
                           FontSize="20"/>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,5,5,0">
                    <Button x:Name="MinimizeButton" 
                            Click="MinimizeButton_Click" 
                            Content="—" 
                            Style="{StaticResource WindowButtonStyle}"/>
                    <Button x:Name="CloseButton" 
                            Click="CloseButton_Click" 
                            Content="✕" 
                            Style="{StaticResource WindowButtonStyle}"/>
                </StackPanel>
            </Grid>

            <ListView Grid.Row="1" ItemsSource="{Binding Items}"
                      SelectedItem="{Binding SelectedItem}"
                      Style="{StaticResource ModernListView}"
                      ItemContainerStyle="{StaticResource ModernListViewItem}"
                      Background="Transparent"
                      Foreground="White"
                      MaxWidth="300">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID"
                                    HeaderContainerStyle="{StaticResource ModernColumnHeader}"
                                    Width="Auto">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Id}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Name"
                                 HeaderContainerStyle="{StaticResource ModernColumnHeader}"
                                 Width="250">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                        </ListView.View>
            </ListView>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">

                <Button Content="ویرایش"
                        Command="{Binding EditItemCommand}"
                        Style="{StaticResource ModernButtonStyle}"
                        Margin="5"
                        Width="60"/>
                <Button Content="حذف"
                        Command="{Binding DeleteItemCommand}"
                        Style="{StaticResource ModernButtonStyle}"
                        Margin="5"
                        Width="60"
                        Background="Crimson"/>
                <Button Content="+" 
                        Command="{Binding AddItemCommand}"
                        Style="{StaticResource ModernButtonStyle}"
                        Margin="5"
                        FontSize="25"
                        Width="60"
                        Height="30"
                        Background="#44aa44"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>