<Window x:Class="PBManager.UI.MVVM.View.AddExamView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PBManager.UI.MVVM.View"
        xmlns:persian="clr-namespace:Mohsen.PersianDateControls;assembly=Mohsen.PersianDateControls"
        mc:Ignorable="d"
        Title="AddExamView" Height="500" Width="450"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None">
    <Border Background="{StaticResource BgPrimaryBrush}" CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid x:Name="TitleBar"
                  Grid.Row="0"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                  Background="Transparent">
                <TextBlock Text="ساخت آزمون" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="White"
                           FontSize="20">
                </TextBlock>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,5,5,0">
                    <Button x:Name="MinimizeButton" 
                            Click="MinimizeButton_Click" 
                            Content="—" 
                            Style="{StaticResource WindowButtonStyle}"/>
                    <Button x:Name="CloseButton" 
                            Click="CloseButton_Click" 
                            Content="✕" 
                            Style="{StaticResource WindowButtonStyle}"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" FlowDirection="RightToLeft">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="نام" VerticalAlignment="Center" Foreground="White"
               FontWeight="Bold"
               Margin="30,0"/>
                <TextBox Grid.Column="1" Text="{Binding Score, UpdateSourceTrigger=PropertyChanged}"
             Width="250"
         Style="{StaticResource ModernTextBox}"/>

                <TextBlock Text="تاریخ" VerticalAlignment="Center"
                           Foreground="White"
                           FontWeight="Bold"
                           Margin="30,0"
                           Grid.Row="1"/>

                <persian:PersianDatePicker x:Name="WeekStartDatePicker"
                                           Grid.Column="1"
                                           Grid.Row="1"
                                           Margin="10"
                                           SelectedDate="{Binding SelectedWeekStart, Mode=TwoWay}"
                                           Background="{StaticResource TableBgBrush}"
                                           BorderBrush="{StaticResource BorderBrush}"
                                           Height="35" Width="250"
                                           FontSize="14"/>
            </Grid>
            <Button Grid.Column="1" Grid.Row="2" Content="ثبت"
                    Style="{StaticResource ModernButtonStyle}"
                    Background="{StaticResource SubmitGreenBrush}"
                    Width="100"
                    Height="30"
                    Margin="10"/>
        </Grid>
    </Border>
</Window>
