<UserControl x:Class="PBManager.UI.MVVM.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PBManager.UI.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Background="{StaticResource BgSecondaryBrush}" CornerRadius="8" Padding="5 5 5 0"
                Grid.Column="2" Margin="5" Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Grid.ColumnSpan="2"
                           Text="دیتابیس"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="10"
                           Foreground="White"
                           FontSize="20"/>

                <Button Content="خروجی گرفتن"
                        x:Name="ExportDbButton"
                        Margin="5"
                        Width="90" Height="70"
                        Style="{StaticResource ModernButtonStyle}"
                        Grid.Row="1" Click="ExportDbButton_Click"/>
                <Button Content="وارد کردن"
                        x:Name="ImportDbButton"
                        Margin="5"
                        Width="90" Height="70"
                        Style="{StaticResource ModernButtonStyle}"
                        Grid.Row="1" Grid.Column="1" Click="ImportDbButton_Click"/>
            </Grid>
        </Border>

        <Border Background="{StaticResource BgSecondaryBrush}" CornerRadius="8" Padding="5 5 5 0"
        Grid.Column="2" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Grid.ColumnSpan="2"
                   Text="دانش آموزان"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="10"
                   Foreground="White"
                   FontSize="20"/>

                <Button Content="خروجی گرفتن"
                x:Name="ExportStudentsButton"
                Margin="5"
                Width="90" Height="70"
                Style="{StaticResource ModernButtonStyle}"
                Grid.Row="1" Click="ExportStudentsButton_Click"/>
                <Button Content="وارد کردن"
                x:Name="ImportStudentsButton"
                Margin="5"
                Width="90" Height="70"
                Style="{StaticResource ModernButtonStyle}"
                Grid.Row="1" Grid.Column="1" Click="ImportStudentsButton_Click"/>
            </Grid>
        </Border>

        <Border Background="{StaticResource BgSecondaryBrush}" CornerRadius="8" Padding="5 5 5 0"
        Margin="5" Grid.Column="1">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Text="کلاس ها"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"
           Margin="10"
           Foreground="White"
           FontSize="20"/>
                <Button Content="مدیریت"
                        x:Name="ManageClasses"
                        Margin="5"
                        Width="180" Height="70"
                        Style="{StaticResource ModernButtonStyle}"
                        Command="{Binding ManageClassesCommand}"
                        Grid.Row="1"/>
            </Grid>
        </Border>

        <Border Background="{StaticResource BgSecondaryBrush}" CornerRadius="8" Padding="5 5 5 0"
                Margin="5">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Text="درس ها"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="10"
                   Foreground="White"
                   FontSize="20"/>
                <Button Content="مدیریت"
                        x:Name="ManageSubjects"
                        Margin="5"
                        Width="180" Height="70"
                        Style="{StaticResource ModernButtonStyle}"
                        Command="{Binding ManageSubjectsCommand}"
                        Grid.Row="1"/>
            </Grid>
        </Border>

        <Border Background="{StaticResource BgSecondaryBrush}" CornerRadius="8" Padding="10 10 10 0"
                Grid.Row="1" Grid.Column="1" Margin="5">
            <Grid FlowDirection="RightToLeft">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="رکورد های مطالعه:"
                           Foreground="White"
                           FontWeight="Bold"
                           Margin="0 0 15 0"/>
                <TextBlock Text="{Binding StudyRecordCount}"
                           Foreground="LightGray"
                           Grid.Column="1"/>

                <TextBlock Text="رکورد های نمره:"
                           Foreground="White"
                           FontWeight="Bold"
                           Grid.Row="1"/>
                <TextBlock Text="{Binding GradeRecordCount}"
                           Foreground="LightGray"
                           Grid.Column="1"
                           Grid.Row="1"/>

                <TextBlock Text="دانش آموزان:"
                           Foreground="White"
                           FontWeight="Bold"
                           Grid.Row="2"/>
                <TextBlock Text="{Binding StudentsCount}"
                           Foreground="LightGray"
                           Grid.Column="1"
                           Grid.Row="2"/>

                <TextBlock Text="کلاس ها:"
                           Foreground="White"
                           FontWeight="Bold"
                           Grid.Row="3"/>
                <TextBlock Text="{Binding ClassesCount}"
                           Foreground="LightGray"
                           Grid.Column="1"
                           Grid.Row="3"/>

                <TextBlock Text="درس ها:"
                           Foreground="White"
                           FontWeight="Bold"
                           Grid.Row="4"/>
                <TextBlock Text="{Binding SubjectsCount}"
                           Foreground="LightGray"
                           Grid.Column="1"
                           Grid.Row="4"/>
            </Grid>
        </Border>

        <Border Background="{StaticResource BgSecondaryBrush}" CornerRadius="8" Padding="10 10 10 0"
        Grid.Row="1" Margin="5">
            <Button Content="حذف دیتابیس"
                    x:Name="clearDbButton"
                    Margin="5"
                    Width="180" Height="70"
                    Grid.Row="1"
                    Command="{Binding WipeDatabaseCommand}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                        <Setter Property="Background" Value="Crimson"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                                        <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#C62828"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#B71C1C"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

        </Border>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <TextBlock x:Name="versionLabel" 
                   Foreground="LightGray" Margin="10 0"/>
            <TextBlock Text="©️ Ario Shakeri 2025"
                   Foreground="LightGray"
                   FontFamily="Arial">
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
