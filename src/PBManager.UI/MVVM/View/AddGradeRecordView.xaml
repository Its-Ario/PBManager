<Window x:Class="PBManager.UI.MVVM.View.AddGradeRecordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                Title="سامانه مدیریت آموزش | ثبت نمرات"
                Height="280" Width="450"
                WindowStyle="None"
                ResizeMode="NoResize"
                Background="Transparent"
                AllowsTransparency="True">
    <Border Background="{StaticResource BgPrimaryBrush}" CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid x:Name="TitleBar"
      Grid.Row="0"
      MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
      Background="Transparent">
                <TextBlock VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Foreground="White"
               FontSize="20">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                            <Setter Property="Text" Value="ثبت نمرات"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                    <Setter Property="Text" Value="ویرایش نمرات"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,5,5,0">
                    <Button x:Name="MinimizeButton" 
                Click="MinimizeButton_Click" 
                Content="—" 
                Style="{StaticResource WindowButtonStyle}"/>
                    <Button x:Name="CloseButton" 
                Click="CloseButton_Click" 
                Content="✕" 
                Style="{StaticResource WindowButtonStyle}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0">
                </StackPanel>
            </Grid>

            <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="1" FlowDirection="RightToLeft">
                <TextBlock Text="آزمون:" VerticalAlignment="Center" 
               Foreground="White" Margin="10,0"/>
                <ComboBox ItemsSource="{Binding AvailableExams}"
                          SelectedItem="{Binding SelectedExam}"
                          DisplayMemberPath="Name"
                          Style="{StaticResource ModernComboBox}"
                          Width="200"/>
            </StackPanel>

            <ItemsControl Grid.Row="2" ItemsSource="{Binding GradeEntries}" Margin="15" FlowDirection="RightToLeft">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding Subject.Name}" VerticalAlignment="Center" Foreground="White"
                           FontWeight="Bold"
                           Margin="30,0"/>

                            <TextBox Grid.Column="1" Text="{Binding Score, UpdateSourceTrigger=PropertyChanged}"
                         Width="60"
                         Style="{StaticResource ModernTextBox}"/>

                            <TextBlock Grid.Column="2"
                                       Foreground="White"
                                       Text="{Binding DataContext.SelectedExam.MaxScore, RelativeSource={RelativeSource AncestorType=ItemsControl}, StringFormat=از {0}}"
                                VerticalAlignment="Center" Margin="5,0"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button Grid.Row="3"
                    Background="{StaticResource SubmitGreenBrush}"
                    Command="{Binding SaveGradesCommand}"
                    Width="100"
                    Height="30"
                    Margin="10">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                        <Setter Property="Content" Value="ثبت"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                <Setter Property="Content" Value="بروزرسانی"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
        </Border>
</Window>
