<UserControl x:Class="PBManager.UI.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:conv="clr-namespace:PBManager.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <conv:MinuteToHourConverter x:Key="MinuteToHourConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Background="#22202F" CornerRadius="8" Padding="15" Margin="0,0,10,0" Grid.Column="0">
            <StackPanel FlowDirection="RightToLeft">
                <TextBlock Text="اطلاعات هفتگی" Foreground="White" FontSize="14" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding AvgStudyTime, StringFormat=میانگین مطالعه: {0}, Converter={StaticResource MinuteToHourConverter}}" 
                               Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding MostStudiedSubject, StringFormat=بیشترین درس مطالعه شده: {0}}"
                               TextWrapping="Wrap"
                               Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding Absentees, StringFormat=تعداد غایبین: {0}}" 
                               Foreground="White" FontSize="14"/>
            </StackPanel>
        </Border>

        <Border Background="#22202F" CornerRadius="8" Padding="10 10 10 0" Grid.Column="1">
            <StackPanel>
                <TextBlock Text="پیشرفت تحصیلی" Foreground="White" FontSize="14" Margin="0,0,0,5" HorizontalAlignment="Right"/>
                <lvc:CartesianChart Height="210" Width="420"
                                    DrawMargin="{Binding DrawMargin}"
                                    Series="{Binding StudyOverTimeSeries}"
                                    XAxes="{Binding StudyOverTimeXAxes}"
                                    YAxes="{Binding StudyOverTimeYAxes}"
                                    ZoomMode="X"/>
            </StackPanel>
        </Border>

        <Border Background="#22202F" CornerRadius="8" Padding="10 10 10 0" Margin="0,10,0,0" Grid.Row="1" Grid.Column="1">
            <StackPanel>
                <TextBlock Text="میانگین مطالعه هفته گذشته" Foreground="White" FontSize="14" Margin="0,0,0,5" HorizontalAlignment="Right"/>
                <lvc:CartesianChart Height="210" Width="420"
                                    DrawMargin="{Binding DrawMargin}"
                                    Series="{Binding StudyPerSubjectSeries}"
                                    XAxes="{Binding StudyPerSubjectXAxes}"
                                    ZoomMode="X"/>
            </StackPanel>
        </Border>

        <Border Background="#22202F" CornerRadius="8" Padding="10" Margin="0,10,10,0" Grid.Row="1" Grid.Column="0">
            <StackPanel>
                <TextBlock Text="" Foreground="White" FontSize="14" Margin="0,0,0,5" HorizontalAlignment="Right"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
