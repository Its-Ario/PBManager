<Window x:Class="PBManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PBManager"
        xmlns:viewModel="clr-namespace:PBManager.UI.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="سامانه مدیریت آموزش"
        Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    
    <Border Background="{StaticResource BgPrimaryBrush}" CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,5,5,0"
                        Grid.Column="1">
                <Button x:Name="MinimizeButton" 
                        Click="MinimizeButton_Click" 
                        Content="—" 
                        Style="{StaticResource WindowButtonStyle}"/>
                <Button x:Name="CloseButton" 
                        Click="CloseButton_Click" 
                        Content="✕" 
                        Style="{StaticResource WindowButtonStyle}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Grid.Row="1">
                <RadioButton Content="خانه"
                             Height="50"
                             Tag="&#xE10F;"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             IsChecked="True"
                             Command="{Binding HomeViewCommand}"/>
                <RadioButton Content="مدیریت دانش‌آموزان"
                             Height="50"
                             Tag="&#xE736;"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding StudyManagementViewCommand}"/>
                <RadioButton Content="مدیریت آزمون ها"
                             Height="50"
                             Tag="&#xE71D;"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding ExamManagementViewCommand}"/>
                <RadioButton Content="تاریخچه"
                             Height="50"
                             Tag="&#xE81C;"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding HistoryViewCommand}"/>
                <RadioButton Content="تنظیمات"
                             Height="50"
                             Tag="&#xE713;"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding SettingsViewCommand}"/>
            </StackPanel>

            <Grid
                  x:Name="TitleBar"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                  Background="Transparent">

                <TextBlock Text="سامانه مدیریت آموزش حلی ۳"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontSize="20"
                       Grid.Column="1"/>
            </Grid>

            <ContentControl Grid.Row="1"
                            Margin="10"
                            Content="{Binding CurrentView}"/>
        </Grid>
    </Border>
</Window>
